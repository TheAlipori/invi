---
import Ornamento3 from "./icons/Ornamento8.astro";
import IglesiaIcon from "./icons/IglesiaIcon.astro";
import ClockIcon from "./icons/ClockIcon.astro";
import ImportanteIcon from "./icons/ImportanteIcon.astro";
import SalonIcon from "./icons/SalonIcon.astro";
const { colorPrimario, misa, recepcion } = Astro.props;
---

<section class="max-w-xl mx-auto overflow-x-hidden">
  <h1
    class="font-pattaya text-center text-5xl"
    data-aos="fade-down"
    data-aos-easing="ease-out-cubic"
    data-aos-duration="800"
  >
    Los detalles
  </h1>

  <Ornamento3
    class="fill-rose-300 w-1/2 mx-auto pb-8"
    data-aos="fade-up"
    data-aos-delay="300"
    data-aos-duration="600"
  />

  <div
    class="grid grid-cols-1 bg-[url('/assets/invitations/galya-1439/background2.jpg')] bg-cover bg-center p-4"
  >
    <div class="relative mt-16">
      <!-- Card 1 - Misa -->
      <div data-aos="fade-right" data-aos-delay="400" data-aos-offset="200">
        <div
          class="relative z-10 text-center border-3 border-rose-300 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow bg-white mx-2 -mt-12"
        >
          <div>
            <IglesiaIcon
              class="size-16 fill-rose-300 mx-auto mb-4 mt-1"
              data-aos="zoom-in"
              data-aos-delay="500"
            />
            <h1
              class="text-4xl font-elegant"
              data-aos="fade-down"
              data-aos-delay="600"
            >
              Misa
            </h1>

            <!-- Horario con icono -->
            <div
              class="flex items-start justify-center gap-2 mt-4"
              data-aos="fade-right"
              data-aos-delay="700"
            >
              <p class="font-elegant text-gray-600 font-bold">
                {misa.lugar}
              </p>
            </div>

            <div
              class="flex items-start justify-center gap-2 mt-4"
              data-aos="fade-right"
              data-aos-delay="700"
            >
              <ClockIcon class="size-5 fill-rose-300 mt-1" />
              <p class="font-elegant text-gray-600">Hora: {misa.hora}</p>
            </div>

            <!-- Dirección con icono -->
            <div
              class="flex items-start justify-center gap-2 mt-2"
              data-aos="fade-left"
              data-aos-delay="800"
            >
              <ImportanteIcon class="size-5 fill-rose-300 mt-1" />
              <p class="font-elegant text-gray-600 text-center">
                {misa.direccion}
              </p>
            </div>

            <a
              href={misa.link}
              target="_blank"
              class="bg-rose-300 hover:bg-rose-300 text-white font-elegant px-4 py-2 rounded transition-colors inline-block mt-4"
              data-aos="zoom-in"
              data-aos-delay="900"
            >
              Ver mapa
            </a>
          </div>
        </div>
      </div>

      <!-- Card 2 - Recepcion -->
      <div
        class="relative mt-16"
        data-aos="fade-left"
        data-aos-delay="500"
        data-aos-offset="150"
      >
        <div
          class="relative z-10 text-center border-2 border-rose-300 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow bg-white mx-2 -mt-12"
        >
          <div>
            <SalonIcon
              class="size-16 fill-rose-300 mx-auto mb-4 mt-1"
              data-aos="zoom-in"
              data-aos-delay="600"
            />
            <h1
              class="text-4xl font-elegant"
              data-aos="fade-down"
              data-aos-delay="700"
            >
              Recepción
            </h1>

            <div
              class="flex items-start justify-center gap-2 mt-4"
              data-aos="fade-right"
              data-aos-delay="700"
            >
              <p class="font-elegant text-gray-600 font-bold">
                {recepcion.lugar}
              </p>
            </div>

            <!-- Horario con icono -->
            <div
              class="flex items-start justify-center gap-2 mt-4"
              data-aos="fade-right"
              data-aos-delay="800"
            >
              <ClockIcon class="size-5 fill-rose-300" />
              <p class="font-elegant text-gray-600">Hora: {recepcion.hora}</p>
            </div>

            <!-- Dirección con icono -->
            <div
              class="flex items-start justify-center gap-2 mt-2"
              data-aos="fade-left"
              data-aos-delay="900"
            >
              <ImportanteIcon class="size-5 fill-rose-300 mt-1" />
              <p class="font-elegant text-gray-600 text-center">
                {recepcion.direccion}
              </p>
            </div>

            <a
              href={recepcion.link}
              target="_blank"
              class="bg-rose-300 hover:bg-amber-700 text-white font-elegant px-4 py-2 rounded transition-colors inline-block mt-4"
              data-aos="zoom-in"
              data-aos-delay="1000"
            >
              Ver mapa
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
