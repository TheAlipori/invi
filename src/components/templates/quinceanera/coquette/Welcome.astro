---
import Ornamento1 from "./icons/Ornamento1.astro";
import Ornamento2 from "./icons/Ornamento2.astro";
import Ornamento3 from "./icons/Ornamento3.astro";
import Ornamento4 from "./icons/Ornamento4.astro";
import Ornamento5 from "./icons/Ornamento5.astro";
import Ornamento6 from "./icons/Ornamento6.astro";
import Ornamento7 from "./icons/Ornamento7.astro";
import Reproductor from "./icons/Reproductor.astro";
import "@fontsource-variable/merriweather";
import "@fontsource/rouge-script";
---

<section class="max-w-md mx-auto p-4">
  <div class="mt-20 mb-5 text-center">
    <div class="mx-auto">
      <Ornamento1 class="mx-auto" data-aos="fade-right" data-aos-delay="400" />
      <h1
        class="text-7xl lg:text-8xl text-[#EA9193] font-cute"
        data-aos="zoom-in"
        data-aos-delay="800"
      >
        Galya
      </h1>
      <Ornamento2
        class="mx-auto mt-1.5"
        data-aos="fade-left"
        data-aos-delay="400"
      />
    </div>
  </div>
  <div class="text-center mt-10">
    <button id="playButton" class="inline-block">
      <Reproductor
        class="w-full mx-auto hover:scale-110 transition-transform"
      />
    </button>
    <audio id="audio" src="/musica.mp3" preload="auto"></audio>
  </div>

  <div>
    <h1 class="text-xl font-elegant text-center">
      Únete a mí para celebrar mis 15 años en este día tan especial
    </h1>
  </div>
  <div class="text-center mt-7" data-aos="fade-up" data-aos-duration="600">
    <Ornamento7
      class="mx-auto max-w-44"
      data-aos="zoom-in"
      data-aos-delay="100"
    />

    <h1 class="text-2xl font-elegant" data-aos="fade-up" data-aos-delay="200">
      Mis padres
    </h1>
    <h1 class="text-xl font-elegant" data-aos="fade-up" data-aos-delay="300">
      Gerardo Antonio Garcia y Garcia
    </h1>
    <h1 class="text-xl font-elegant" data-aos="fade-up" data-aos-delay="400">
      Eglayd Denisse Tovalin Norton
    </h1>

    <Ornamento7
      class="mx-auto max-w-44 mt-8"
      data-aos="zoom-in"
      data-aos-delay="500"
    />

    <h1 class="text-2xl font-elegant" data-aos="fade-up" data-aos-delay="600">
      Mis padrinos
    </h1>
    <h1 class="text-xl font-elegant" data-aos="fade-up" data-aos-delay="700">
      Francisco Larreta Vargas
    </h1>
    <h1 class="text-xl font-elegant" data-aos="fade-up" data-aos-delay="800">
      Ofelia Norton Paez
    </h1>
  </div>
</section>

<script type="module">
  const playButton = document.getElementById("playButton");
  const audio = document.getElementById("audio");

  playButton.addEventListener("click", () => {
    if (audio.paused) {
      audio.play();
    } else {
      audio.pause();
    }
  });
</script>
