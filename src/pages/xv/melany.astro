---

<Layout>
  <section class="bg-[#F8E8CF] overflow-hidden">
    <!-- Hero -->
    <section
      class="w-screen h-[70vh] flex justify-center items-center relative bg-cover bg-center"
    >
      <div
        class="relative w-full h-full mx-auto overflow-hidden"
        data-aos="fade-up"
        data-aos-delay="400"
      >
        <img src="/galeria2.jpeg" alt="" class="mx-auto" />
      </div>
      <div
        class="mx-auto absolute -bottom-15"
        data-aos="flip-up"
        data-aos-delay="800"
        data-aos-offset="200"
      >
        <img src="/assets/invitations/melany-4846/icon.png" alt="" class="" />
      </div>
    </section>

    <!-- Welcome -->
    <section class="max-w-md mx-auto p-4">
      <div class="mt-20 mb-5 text-center">
        <div class="mx-auto">
          <Ornamento1
            class="mx-auto"
            data-aos="fade-right"
            data-aos-delay="400"
          />
          <h1
            class="text-7xl lg:text-8xl text-[#EA9193] font-cute"
            data-aos="zoom-in"
            data-aos-delay="800"
          >
            Melany
          </h1>
          <Ornamento2
            class="mx-auto mt-1.5"
            data-aos="fade-left"
            data-aos-delay="400"
          />
        </div>
      </div>
      <div class="text-center mt-10">
        <button id="playButton" class="inline-block">
          <Reproductor
            class="w-full mx-auto hover:scale-110 transition-transform"
          />
        </button>
        <audio id="audio" src="/cancion2.mp3" preload="auto"></audio>
      </div>

      <div>
        <h1 class="text-xl font-elegant text-center mt-8">
          Únete a mí para celebrar mis 15 años en este día tan especial
        </h1>
      </div>
      <div class="text-center mt-7" data-aos="fade-up" data-aos-duration="600">
        <Ornamento9 class="mx-auto" data-aos="zoom-in" data-aos-delay="100" />

        <h1
          class="text-3xl font-elegant mt-3 mb-3"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          Mis padres
        </h1>
        <h1
          class="text-xl font-elegant"
          data-aos="fade-up"
          data-aos-delay="300"
        >
          Miguel Guevara Rodríguez
        </h1>
        <h1
          class="text-xl font-elegant"
          data-aos="fade-up"
          data-aos-delay="400"
        >
          Alma Medina Alvarado
        </h1>

        <Ornamento9
          class="mx-auto mt-8"
          data-aos="zoom-in"
          data-aos-delay="500"
        />

        <h1
          class="text-3xl font-elegant mt-4 mb-4"
          data-aos="fade-up"
          data-aos-delay="600"
        >
          Mis padrinos
        </h1>
        <h1
          class="text-xl font-elegant"
          data-aos="fade-up"
          data-aos-delay="700"
        >
          Claudia Guevara de Alcalá
        </h1>
        <h1
          class="text-xl font-elegant"
          data-aos="fade-up"
          data-aos-delay="800"
        >
          Ernesto Alcalá
        </h1>
      </div>
    </section>

    <script type="module">
      const playButton = document.getElementById("playButton");
      const audio = document.getElementById("audio");

      playButton.addEventListener("click", () => {
        if (audio.paused) {
          audio.play();
        } else {
          audio.pause();
        }
      });
    </script>

    <!-- DATE SECTION -->
    <section class="max-w-3xl mx-auto overflow-x-hidden">
      <h1
        class="text-center text-5xl font-elegant mt-24 text-gray-800"
        data-aos="fade-down"
        data-aos-easing="ease-in-out"
        data-aos-duration="800"
      >
        Aparta la fecha
      </h1>
      <Ornamento6
        class="fill-[#EA9193] w-1/2 mx-auto"
        data-aos="fade-up"
        data-aos-delay="300"
        data-aos-duration="600"
      />

      <div class="grid grid-cols-2 mt-14 font-elegant">
        <!-- Columna izquierda: Día (ocupa 2 filas) -->
