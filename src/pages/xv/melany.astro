const images = [
  { src: "/galeria1.jpeg", alt: "Foto quinceañera 1", delay: 100 },
  { src: "/galeria2.jpeg", alt: "Foto quinceañera 2", delay: 200 },
  { src: "/galeria3.jpeg", alt: "Foto quinceañera 3", delay: 300 },
  { src: "/galeria4.jpeg", alt: "Foto quinceañera 4", delay: 400 },
  { src: "/galeria5.jpeg", alt: "Foto quinceañera 4", delay: 400 },
  { src: "/galeria6.jpeg", alt: "Foto quinceañera 4", delay: 400 },
  { src: "/galeria7.jpeg", alt: "Foto quinceañera 4", delay: 400 },
