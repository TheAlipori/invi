import Ornamento6 from "../../components/templates/quinceanera/coquette/icons/Ornamento6.astro";
import Ornamento7 from "../../components/templates/quinceanera/coquette/icons/Ornamento7.astro";
import Ornamento8 from "../../components/templates/quinceanera/coquette/icons/Ornamento8.astro";
